<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="com.player">
    
    <implementation class="com.player.PlayerPlugin"/>
    
    <service>
        <provide interface="com.libary.interfaces.Plugin"/>
    </service>
   
    <reference bind="setWorld" 
               cardinality="0..1"
               interface="com.library.interfaces.IWorldService"
               name="worldService" 
               policy="dynamic" 
               unbind="removeWorld"/>
    
    <reference bind="setAssetManager" 
               cardinality="0..1"
               interface="com.library.interfaces.IAssetManager"
               name="inputService" 
               policy="dynamic" 
               unbind="removeAssetManager"/>
    
</scr:component>
