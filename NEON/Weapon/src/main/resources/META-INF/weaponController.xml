    <reference bind="setCollisionService" cardinality="0..1"
               interface="com.library.ICollisionService"
               name="ICollisionService" policy="dynamic" unbind="removeCollisionService"/>

    <reference bind="setProjectileService" cardinality="0..1"
               interface="com.library.IProjectileService"
               name="IProjectileService" policy="dynamic" unbind="removeProjectileService"/>

    <reference bind="setTargetingService" cardinality="0..1"
               interface="com.library.ITargetingService"
               name="ITargetingService" policy="dynamic" unbind="removeTargetingService"/>
    
    
</scr:component>
